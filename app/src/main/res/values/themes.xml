<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.RovleApp" parent="Theme.AppCompat">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="DialogTheme" parent="">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">stateHidden|stateAlwaysHidden|adjustResize</item>
        <item name="android:windowAnimationStyle">@style/Animation.WindowSlideUpDown</item>
    </style>


    <style name="Animation.WindowSlideUpDown" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CustomAlertDialog" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_white</item>
        <item name="background">@drawable/bg_white</item>
        <item name="backgroundColor">@drawable/bg_white</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/chaumont_scriptbeta_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>