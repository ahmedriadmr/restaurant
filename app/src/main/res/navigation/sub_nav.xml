<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shop_nav"
    app:startDestination="@id/subscribtionFragment">

    <fragment
        android:id="@+id/paymentMethodSubscriptionFragment"
        android:name="com.doubleclick.restaurant.feature.subscriptions.paymentSubscription.PaymentMethodSubscriptionFragment"
        android:label="fragment_payment_method"
        tools:layout="@layout/fragment_payment_method">
        <action
            android:id="@+id/action_paymentMethodSubscriptionFragment_to_paymentSubscriptionFragment"
            app:destination="@id/paymentSubscriptionFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <argument
            android:name="subscriptionId"
            app:argType="string" />
        <argument
            android:name="totalCost"
            app:argType="float" />
        <argument
            android:name="subscriptionDetails"
            app:argType="com.doubleclick.restaurant.feature.subscriptions.mySubscriptions.data.showSubscription.SubscriptionData" />
    </fragment>
    <fragment
        android:id="@+id/paymentSubscriptionFragment"
        android:name="com.doubleclick.restaurant.feature.subscriptions.paymentSubscription.PaymentSubscriptionFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" >
    <argument
        android:name="subscriptionId"
        app:argType="string" />
        <argument
            android:name="totalCost"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/subscribtionFragment"
        android:name="com.doubleclick.restaurant.feature.subscriptions.SubscriptionFragment"
        android:label="fragment_subscribtion"
        tools:layout="@layout/fragment_subscription">
        <action
            android:id="@+id/action_subscribtionFragment_to_showPlanFragment"
            app:destination="@id/showPlanFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_subscribtionFragment_to_showMySubscriptionFragment"
            app:destination="@id/showMySubscriptionFragment" />

        <argument
            android:name="subscriptionId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="isEdit"
            app:argType="boolean"
            android:defaultValue="false" />
        <argument
            android:name="providerId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue=""/>
        <action
            android:id="@+id/action_subscribtionFragment_to_filterPlansFragment"
            app:destination="@id/filterPlansFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"/>
        <action
            android:id="@+id/action_subscribtionFragment_to_sortingInSubscriptionFragment"
            app:destination="@id/sortingInSubscriptionFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"/>


    </fragment>

    <fragment
        android:id="@+id/showPlanFragment"
        android:name="com.doubleclick.restaurant.feature.subscriptions.providerList.presentation.ShowPlanFragment"
        android:label="fragment_show_plan"
        tools:layout="@layout/fragment_show_plan">
        <action
            android:id="@+id/action_showPlanFragment_to_planInformationFragment"
            app:destination="@id/planInformationFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <argument
            android:name="subscriptionId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="planId"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <dialog
        android:id="@+id/showInformationFragment"
        android:name="com.doubleclick.restaurant.feature.subscriptions.providerList.presentation.ShowSubscriptionInformationFragment"
        android:label="fragment_show_information"
        tools:layout="@layout/fragment_show_information">
        <action
            android:id="@+id/action_showInformationFragment_to_paymentMethodSubscriptionFragment"
            app:destination="@id/paymentMethodSubscriptionFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <argument
            android:name="subscriptionId"
            app:argType="string"
             />
        <action
            android:id="@+id/action_showInformationFragment_to_paymentSubscriptionFragment"
            app:destination="@id/paymentSubscriptionFragment" />

    </dialog>
    <fragment
        android:id="@+id/planInformationFragment"
        android:name="com.doubleclick.restaurant.feature.subscriptions.providerList.presentation.PlanInformationFragment"
        android:label="fragment_plan_information"
        tools:layout="@layout/fragment_plan_information">
        <action
            android:id="@+id/action_planInformationFragment_to_showInformationFragment"
            app:destination="@id/showInformationFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <argument
            android:name="subscriptionId"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="plan"
            app:argType="com.doubleclick.restaurant.feature.subscriptions.providerList.data.showPlan.PlanDetails"
            app:nullable="true" />
        <argument
            android:name="title"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/showMySubscriptionFragment"
        android:name="com.doubleclick.restaurant.feature.subscriptions.mySubscriptions.presentation.ShowMySubscriptionFragment"
        android:label="ShowMySubscriptionFragment"
        tools:layout="@layout/fragment_show_mysubscription">
        <argument
            android:name="id"
            app:argType="string" />
        <action
            android:id="@+id/action_showMySubscriptionFragment_to_subscribtionFragment"
            app:destination="@id/subscribtionFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/subscribtionFragment" />
        <action
            android:id="@+id/action_showMySubscriptionFragment_to_showPlanFragment"
            app:destination="@id/showPlanFragment" />
        <action
            android:id="@+id/action_showMySubscriptionFragment_to_planInformationFragment"
            app:destination="@id/planInformationFragment" />
        <action
            android:id="@+id/action_showMySubscriptionFragment_to_showInformationFragment"
            app:destination="@id/showInformationFragment" />

    </fragment>
    <dialog
        android:id="@+id/filterPlansFragment"
        android:name="com.doubleclick.restaurant.feature.subscriptions.filterPlan.presentations.FilterPlansFragment"
        android:label="FilterPlansFragment"
        tools:layout="@layout/fragment_filter_plans">
        <action
            android:id="@+id/action_filterPlansFragment_to_subscribtionFragment"
            app:destination="@id/subscribtionFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"/>
    </dialog>
    <dialog
        android:id="@+id/sortingInSubscriptionFragment"
        android:name="com.doubleclick.restaurant.feature.subscriptions.SortingInSubscriptionFragment"
        android:label="fragment_sort_in_subscription"
        tools:layout="@layout/fragment_sort_in_subscription" >
        <action
            android:id="@+id/action_sortingInSubscriptionFragment_to_subscribtionFragment"
            app:destination="@id/subscribtionFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"/>
    </dialog>


</navigation>