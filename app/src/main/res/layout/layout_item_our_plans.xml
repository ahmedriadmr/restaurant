<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="@drawable/bg_white_r30"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="16dp">

    <LinearLayout
        android:id="@+id/llplan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/planName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/excon_regular"
            android:gravity="start"
            android:padding="5dp"
            tools:text="Plan Name"
            android:textColor="@color/dark_brown"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="5dp"
            android:rotation="0"
            android:src="@drawable/arrow"
            app:tint="@color/dark_brown" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_description_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/excon_regular"
        android:gravity="start"
        android:maxLines="2"
        android:padding="5dp"
        tools:text="Dolor mollitia in ut libero voluptas. Dolor mollitia in ut libero voluptas. Porro perferendis qui consequa...."
        android:textColor="@color/dark_brown"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/more_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startfrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/excon_regular"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/start_from"
                android:textColor="@color/dark_brown"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/excon_regular"
                android:gravity="start"
                android:padding="5dp"
                tools:text="100 g"
                android:textColor="@color/dark_brown"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/equals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/excon_regular"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/equal"
                android:textColor="@color/dark_brown"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/excon_regular"
                android:gravity="start"
                android:padding="5dp"
                tools:text="10.00 $"
                android:textColor="@color/dark_brown"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">



                <TextView
                    android:id="@+id/btn_subscription"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:minHeight="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_brown_r20"
                    android:fontFamily="@font/excon_regular"
                    android:gravity="center"
                    android:text="@string/subscribe"
                    android:textColor="@color/white"
                    android:textSize="14sp" />



        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>