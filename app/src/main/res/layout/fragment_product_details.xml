<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".feature.shop.productDetails.presentation.ProductDetailsFragment">

    <!-- Header outside ScrollView -->
    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_salmon_r30"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coffee_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/excon_bold"
                    android:textColor="#44211D"
                    android:textSize="16sp"
                    tools:text="American coffe" />


                <TextView
                    android:id="@+id/sca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:textColor="#44211D"
                    android:textSize="14sp"
                    tools:text="SCA 80.0" />
            </LinearLayout>

            <TextView
                android:id="@+id/rosted_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/excon_bold"
                android:textColor="@color/brown"
                android:textSize="13sp"
                tools:text="roasted by yebala coffe, spain " />


            <LinearLayout
                android:id="@+id/ll_presentations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/excon_regular"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/brown"
                    android:textSize="16sp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="Descuento:50%" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_variety"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_salmon_a50_r30"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/layout_item_variety" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_blue_r30"
        android:gravity="center"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minWidth="19.5dp"
            android:minHeight="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/_cart_"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/confimar_pedido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/confirmar_anadir_al_carrito"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/totalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/chaumont_scriptbeta_regular"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="0.0$" />
    </LinearLayout>
</LinearLayout>
