<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center"
    android:paddingHorizontal="8dp"
    android:paddingVertical="16dp"
    android:background="@drawable/bg_salmon_r30"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/open_levels"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/provider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:fontFamily="@font/excon_medium"
            tools:text="LA FINCA Coffee"
            android:textAllCaps="true"
            android:textColor="@color/dark_brown"
            android:textSize="18sp" />


            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/arrow"
                android:rotation="-90"
                app:tint="@color/dark_brown" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/user_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/excon_medium"
                tools:text="user points"
                android:textAllCaps="true"
                android:textColor="@color/dark_brown"
                android:textSize="18sp" />

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/bg_salmon_a50_r30"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lllevel1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/chaumont_scriptbeta_regular"
                android:text="@string/level_1"
                android:textAllCaps="false"
                android:textColor="@color/blue_text_color"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/arrow_indicator1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/arrow"
                android:rotation="-90"
                app:tint="@color/blue_text_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/dark_brown" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_level1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/layout_item_level"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/lllevel2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/chaumont_scriptbeta_regular"
                android:text="@string/level_2"
                android:textAllCaps="false"
                android:textColor="@color/blue_text_color"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/arrow_indicator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/arrow"
                android:rotation="-90"
                app:tint="@color/blue_text_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/dark_brown" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_level2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/layout_item_level"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/lllevel3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/chaumont_scriptbeta_regular"
                android:text="@string/level_3"
                android:textAllCaps="false"
                android:textColor="@color/blue_text_color"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/arrow_indicator3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/arrow"
                android:rotation="-90"
                app:tint="@color/blue_text_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/dark_brown" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_level3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/layout_item_level"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>