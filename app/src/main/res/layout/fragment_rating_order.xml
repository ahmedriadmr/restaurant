<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".feature.profile.presentation.FacturaFragment">

    <include
        android:id="@+id/header"
        layout="@layout/header" />



            <LinearLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:minHeight="150dp"
                android:background="@drawable/linear_background_light_brown"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        tools:text="Product name"
                        android:fontFamily="@font/excon_regular"
                        android:textColor="@color/dark_brown"
                        android:textSize="16sp"
                        android:layout_margin="10dp"/>



                <LinearLayout
                    android:id="@+id/customRatingLayout"
                    android:layout_width="279dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_star_empty" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_star_empty" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_star_empty" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_star_empty" />

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_star_empty" />

                </LinearLayout>


            </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_fram_color_blue"
            android:fontFamily="@font/excon_regular"
            android:layout_marginHorizontal="10dp"
            android:text="@string/cancel"
            android:textColor="@color/dark_brown"
            android:textSize="16sp"
            style="?android:attr/buttonBarButtonStyle" />



        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/frame_button_offers"
            android:fontFamily="@font/excon_regular"
            android:text="@string/submite"
            android:textColor="@color/dark_brown"
            android:textSize="16sp"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

</LinearLayout>



