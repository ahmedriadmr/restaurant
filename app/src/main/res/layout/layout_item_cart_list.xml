<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="1dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_salmon_r30"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/provider_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/text_color_brown"
                    android:textSize="16sp"
                    tools:text="Provider Name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/products_names"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp"
                    tools:text="roasted by yebala coffe, spain " />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/show_more_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="35dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/excon_regular"
                    android:text="@string/show_more_details"
                    android:textColor="#58291E"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/arrow_indicator"
                    android:layout_width="wrap_content"
                    android:minWidth="25dp"
                    android:layout_height="wrap_content"
                    android:minHeight="25dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:rotation="180"
                    android:background="@drawable/bg_frame_light_brown"
                    android:scaleType="center"
                    android:src="@drawable/arrow"
                    app:tint="@color/dark_brown" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_my_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="2"
                tools:listitem="@layout/layout_items_in_list_cart" />
            <TextView
                android:id="@+id/order_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_blue_btn_2"
                android:gravity="center"
                android:text="@string/pedir_ahora"
                android:textColor="@color/white" />
        </LinearLayout>

</ScrollView>