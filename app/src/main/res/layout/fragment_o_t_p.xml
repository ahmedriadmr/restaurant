<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="@string/enter_otp_code"
                android:textColor="@color/bg_color_black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:text="@string/check_your_email_and_you_will_find_the_otp_code"
                android:textColor="@color/bg_color_black"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/firstNum"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_grey_frame"
                    android:fontFamily="@font/chaumont_scriptbeta_regular"
                    android:gravity="center"
                    android:hint="@string/_1"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:minWidth="50dp"
                    android:minHeight="120dp"
                    android:textColor="@color/blue"
                    android:textSize="48sp"
                    tools:text="1" />

                <EditText
                    android:id="@+id/secondNum"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_grey_frame"
                    android:fontFamily="@font/chaumont_scriptbeta_regular"
                    android:gravity="center"
                    android:hint="@string/_1"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:minWidth="50dp"
                    android:minHeight="120dp"
                    android:textColor="@color/blue"
                    android:textSize="48sp"
                    tools:text="1" />

                <EditText
                    android:id="@+id/thirdNum"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_grey_frame"
                    android:fontFamily="@font/chaumont_scriptbeta_regular"
                    android:gravity="center"
                    android:hint="@string/_1"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:minWidth="50dp"
                    android:minHeight="120dp"
                    android:textColor="@color/blue"
                    android:textSize="48sp"
                    tools:text="1" />

                <EditText
                    android:id="@+id/fourthNum"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_grey_frame"
                    android:fontFamily="@font/chaumont_scriptbeta_regular"
                    android:gravity="center"
                    android:hint="@string/_1"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:minWidth="50dp"
                    android:minHeight="120dp"
                    android:textColor="@color/blue"
                    android:textSize="48sp"
                    tools:text="1" />

                <EditText
                    android:id="@+id/fifthNum"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_grey_frame"
                    android:fontFamily="@font/chaumont_scriptbeta_regular"
                    android:gravity="center"
                    android:hint="@string/_1"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:minWidth="50dp"
                    android:minHeight="120dp"
                    android:textColor="@color/blue"
                    android:textSize="48sp"
                    tools:text="1" />

                <EditText
                    android:id="@+id/sixthNum"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/bg_grey_frame"
                    android:fontFamily="@font/chaumont_scriptbeta_regular"
                    android:gravity="center"
                    android:hint="@string/_1"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxEms="1"
                    android:maxLength="1"
                    android:maxLines="1"
                    android:minWidth="50dp"
                    android:minHeight="120dp"
                    android:textColor="@color/blue"
                    android:textSize="48sp"
                    tools:text="1" />
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Did_you_not_receive_OTP_Resend"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/verify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_black_fill"
            android:backgroundTint="@color/selection_color_button"
            android:enabled="false"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/verify"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal">

            <View
                android:layout_width="60dp"
                android:layout_height="8dp"
                android:background="@drawable/rec_gray" />

            <View
                android:layout_width="60dp"
                android:layout_height="8dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/rec_black" />

            <View
                android:layout_width="60dp"
                android:layout_height="8dp"
                android:background="@drawable/rec_gray" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>