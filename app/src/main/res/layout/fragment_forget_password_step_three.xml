<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_screens"
    tools:context=".feature.auth.forgetPassword.presentations.ForgetPasswordStepThreeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="top"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/chaumont_scriptbeta_regular"
                android:rotation="-10"
                android:text="@string/Recuperar_contraseÃ±a"
                android:textColor="#3EB9EF"
                android:textSize="55sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/excon_regular"
                android:gravity="center"
                android:text="@string/Fill_in_your_new_password"
                android:textColor="@color/dark_brown"
                android:textSize="15sp" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusBottomEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorEnabled="false"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/eye"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#3EB9EF"
                app:startIconDrawable="@drawable/lock"
                app:startIconTint="#3EB9EF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="0dp"
                    android:minHeight="60dp"
                    android:hint="@string/contrase_a"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_brown"
                    android:textColorHint="@color/hint_text_color" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusBottomEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:errorEnabled="false"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/eye"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#3EB9EF"
                app:startIconDrawable="@drawable/lock"
                app:startIconTint="#3EB9EF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_confirmation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="0dp"
                    android:minHeight="60dp"
                    android:hint="@string/confirma_tu_contrase_a"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_brown"
                    android:textColorHint="@color/hint_text_color" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/confirm_informations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bg_brown_btn"
            android:backgroundTint="@color/selection_color_button"
            android:enabled="false"
            android:fontFamily="@font/excon_regular"
            android:gravity="center"
            android:text="@string/restore_password"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>