<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:background="@drawable/bg_salmon_r30"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/excon_regular"
            android:textColor="@color/brown"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="American Coffee" />

        <TextView
            android:id="@+id/offerDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chaumont_scriptbeta_regular"
            android:textColor="@color/brown"
            android:textSize="23sp"
            tools:text="Descuento:10%" />


    </LinearLayout>

    <TextView
        android:id="@+id/roasted_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/excon_regular"
        android:textColor="@color/dark_brown"
        android:textStyle="bold"
        tools:text="roasted by yebala coffe, spain " />


    <TextView
        android:id="@+id/sca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/excon_regular"
        android:textColor="@color/dark_brown"
        android:textSize="14sp"
        tools:text="SCA 80.0" />


    <LinearLayout
        android:id="@+id/go_to_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/more_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/excon_medium"
            android:paddingHorizontal="18dp"
            android:paddingVertical="10dp"
            android:text="@string/ver_ficha"
            android:textColor="@color/dark_brown"
            android:textSize="15sp" />


        <LinearLayout
            android:id="@+id/go_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_blue_r20"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/cart_white"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/cartbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/anadir_al_carrito"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>