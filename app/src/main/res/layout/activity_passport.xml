<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".feature.passport.PassportActivity">


    <include
        android:id="@+id/header"
        layout="@layout/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bg_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_qr_svg"
        android:orientation="vertical"
        android:paddingVertical="16dp">


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:scrollbars="none">

            <com.doubleclick.rovleapp.views.togglebuttongroup.SingleSelectToggleGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/toggleContainer"
                app:tbgCheckedButton="@id/qr">

                <com.doubleclick.rovleapp.views.togglebuttongroup.button.CircularToggle
                    android:id="@+id/qr"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_salmon_r30"
                    android:text="@string/qr"
                    app:tbgMarkerColor="@color/blue" />

                <com.doubleclick.rovleapp.views.togglebuttongroup.button.CircularToggle
                    android:id="@+id/offers"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_salmon_r30"
                    android:text="@string/ofertas"
                    app:tbgMarkerColor="@color/blue" />

                <com.doubleclick.rovleapp.views.togglebuttongroup.button.CircularToggle
                    android:id="@+id/logros"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_salmon_r30"
                    android:text="@string/logros"
                    app:tbgMarkerColor="@color/blue" />

            </com.doubleclick.rovleapp.views.togglebuttongroup.SingleSelectToggleGroup>

        </HorizontalScrollView>

        <FrameLayout
            android:id="@+id/passport_host"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>