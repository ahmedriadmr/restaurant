<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_screens"
    tools:context=".feature.auth.forgetPassword.presentations.ForgetPasswordStepTwoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/chaumont_scriptbeta_regular"
                android:gravity="center"
                android:rotation="-10"
                android:text="@string/Recuperar_contraseÃ±a"
                android:textColor="#3EB9EF"
                android:textSize="55sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/excon_regular"
                android:gravity="center"
                android:text="@string/el_c_digo_otp_fue_enviado_n_al_correo_electr_nico_dserrano_yebala_org"
                android:textColor="@color/dark_brown"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/firstNum"
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_white_r50"
                        android:fontFamily="@font/chaumont_scriptbeta_regular"
                        android:gravity="center"
                        android:hint="@string/_1"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxEms="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:minWidth="50dp"
                        android:minHeight="120dp"
                        android:textColor="@color/blue"
                        android:textSize="48sp"
                        tools:text="1" />

                    <EditText
                        android:id="@+id/secondNum"
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_white_r50"
                        android:fontFamily="@font/chaumont_scriptbeta_regular"
                        android:gravity="center"
                        android:hint="@string/_1"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxEms="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:minWidth="50dp"
                        android:minHeight="120dp"
                        android:textColor="@color/blue"
                        android:textSize="48sp"
                        tools:text="1" />

                    <EditText
                        android:id="@+id/thirdNum"
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_white_r50"
                        android:fontFamily="@font/chaumont_scriptbeta_regular"
                        android:gravity="center"
                        android:hint="@string/_1"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxEms="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:minWidth="50dp"
                        android:minHeight="120dp"
                        android:textColor="@color/blue"
                        android:textSize="48sp"
                        tools:text="1" />

                    <EditText
                        android:id="@+id/fourthNum"
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_white_r50"
                        android:fontFamily="@font/chaumont_scriptbeta_regular"
                        android:gravity="center"
                        android:hint="@string/_1"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxEms="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:minWidth="50dp"
                        android:minHeight="120dp"
                        android:textColor="@color/blue"
                        android:textSize="48sp"
                        tools:text="1" />

                    <EditText
                        android:id="@+id/fifthNum"
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_white_r50"
                        android:fontFamily="@font/chaumont_scriptbeta_regular"
                        android:gravity="center"
                        android:hint="@string/_1"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxEms="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:minWidth="50dp"
                        android:minHeight="120dp"
                        android:textColor="@color/blue"
                        android:textSize="48sp"
                        tools:text="1" />

                    <EditText
                        android:id="@+id/sixthNum"
                        android:layout_width="50dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/bg_white_r50"
                        android:fontFamily="@font/chaumont_scriptbeta_regular"
                        android:gravity="center"
                        android:hint="@string/_1"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxEms="1"
                        android:maxLength="1"
                        android:maxLines="1"
                        android:minWidth="50dp"
                        android:minHeight="120dp"
                        android:textColor="@color/blue"
                        android:textSize="48sp"
                        tools:text="1" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <TextView
            android:id="@+id/verificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_brown_btn"
            android:backgroundTint="@color/selection_color_button"
            android:enabled="false"
            android:fontFamily="@font/excon_regular"
            android:gravity="center"
            android:minWidth="270dp"
            android:minHeight="60dp"
            android:text="@string/verificar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Did_you_not_receive_OTP_Resend"
                android:textColor="@color/dark_brown"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>