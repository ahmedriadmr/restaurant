<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".feature.subscriptions.providerList.presentation.PlanInformationFragment">

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_salmon_r30"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="16dp">

            <LinearLayout
                android:id="@+id/show_more_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="35dp"
                android:layout_marginHorizontal="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/plan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/excon_regular"
                    tools:text="Darryl Nicolas "
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/provider_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/excon_regular"
                    tools:text=" / yebala coffe"
                    android:textColor="@color/dark_brown"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_salmon_a50_r30"
                android:orientation="vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name_plan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/excon_regular"
                            tools:text="Nombre del plan"
                            android:textColor="#44211D"
                            android:textFontWeight="700"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/excon_regular"
                            tools:text="Dolor mollitia in ut libero voluptas. Porro perferendis qui consequatur. Atque voluptates facilis eaque. "
                            android:textColor="@color/dark_brown"
                            android:textSize="12sp" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_white_r30"
                            android:orientation="horizontal"
                            android:paddingHorizontal="8dp">

                            <com.doubleclick.restaurant.views.customSpinner.CustomSpinner
                                android:id="@+id/spinner_weight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:minHeight="24dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:dropDownVerticalOffset="40dp"
                                tools:listitem="@layout/text_spinner_layout" />

                            <ImageView
                                android:id="@+id/arrow_weight_spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:src="@drawable/add" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/excon_regular"
                            android:text="@string/precio"
                            android:textColor="@color/dark_brown"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/chaumont_scriptbeta_regular"
                            android:textColor="@color/dark_brown"
                            android:textSize="24sp"
                            tools:text="25.00 $" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_salmon_a50_r30"
                android:orientation="vertical">

                <EditText

                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:gravity="start"
                    android:inputType="text"
                    android:hint="@string/observaciones_tipo_de_molienda"
                    android:padding="16dp"
                    android:textColor="@color/dark_brown"
                    android:textColorHint="@color/hint_text_color" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_salmon_a50_r30"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/excon_bold"
                    android:text="@string/entrega_peri_dica"
                    android:textColor="@color/dark_brown"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_white_r30"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <com.doubleclick.restaurant.views.customSpinner.CustomSpinner
                        android:id="@+id/delivery_periodic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@null"
                        android:dropDownVerticalOffset="40dp"
                        android:padding="8dp"
                        tools:listitem="@layout/text_spinner_layout" />

                    <ImageView
                        android:id="@+id/arrow_delivery_periodic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@drawable/add" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_salmon_a50_r30"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/excon_regular"
                    android:textColor="@color/dark_brown"
                    android:textSize="18sp"
                    android:text="@string/selecciona_tipo_de_entrega" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbtakeaway"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:buttonTint="@color/brown"
                        android:fontFamily="@font/excon_regular"
                        android:text="@string/para_llevar"
                        android:textColor="@color/dark_brown"
                        android:textSize="16sp" />


                    <RadioButton
                        android:id="@+id/rblocker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:buttonTint="@color/brown"
                        android:fontFamily="@font/excon_regular"
                        android:text="@string/locker"
                        android:textColor="@color/dark_brown"
                        android:textSize="16sp" />



                    <RadioButton
                        android:id="@+id/rbhome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:buttonTint="@color/brown"
                        android:fontFamily="@font/excon_regular"
                        android:text="@string/domicilio"
                        android:textColor="@color/dark_brown"
                        android:textSize="16sp" />


                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/i_take_away"
                        layout="@layout/shop_shipping_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/i_locker"
                        layout="@layout/locker_shipping_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/i_home"
                        layout="@layout/home_shipping_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/show_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:enabled="false"
                android:background="@drawable/bg_brown_btn"
                android:backgroundTint="@color/selection_color_button"
                android:gravity="center"
                android:text="@string/continuar"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>