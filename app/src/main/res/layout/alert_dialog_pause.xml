<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/alert_dialog_pause"
    android:padding="16dp"
    android:background="@drawable/bg_salmon_a50_r30">

    <!-- Title -->
    <TextView
        android:id="@+id/alertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"/>

    <!-- Spinner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_white_r50"
        android:orientation="horizontal">

        <com.doubleclick.rovleapp.views.customSpinner.CustomSpinner
            android:id="@+id/pause_period_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@null"
            android:dropDownVerticalOffset="40dp"
            android:entries="@array/pause_periods"/>

        <ImageView
            android:id="@+id/arrow_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/add" />

    </LinearLayout>

    <!-- Buttons -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btncancel"
            android:layout_width="wrap_content"
            android:minWidth="140dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:layout_marginHorizontal="15dp"
            android:text="@string/cancel"
            android:textColor="@color/beige"
            android:background="@drawable/bg_brown_r30"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:minWidth="140dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:layout_marginHorizontal="15dp"
            android:text="@string/guardar"
            android:background="@drawable/bg_blue_r30"
            android:textColor="@color/dark_brown"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>